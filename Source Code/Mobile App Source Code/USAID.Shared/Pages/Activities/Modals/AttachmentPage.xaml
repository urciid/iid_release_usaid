<?xml version="1.0" encoding="UTF-8"?>
<local:AttachmentPageBase xmlns="http://xamarin.com/schemas/2014/forms" BackgroundColor="Transparent" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="USAID.Pages.AttachmentPage" 
		xmlns:local="clr-namespace:USAID.Pages;assembly=WMP" 
		Title="{Binding PageTitle}"
		xmlns:custom="clr-namespace:USAID.CustomRenderers;assembly=USAID">
	<StackLayout Padding="0, 0, 0, 0">
		<StackLayout Padding="10,0,10,0" HeightRequest="60" x:Name="buttonLayout" Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
			<Button TextColor="White" Text="Close" FontSize="Medium" BackgroundColor="Transparent" VerticalOptions="EndAndExpand" HorizontalOptions="StartAndExpand" Command="{Binding CancelCommand}"></Button>
		</StackLayout>
		<StackLayout Padding="0,0,0,0" x:Name="imageLayout" Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="FillAndExpand">
			<Image Source="{Binding ImageSelected}" HeightRequest="300" WidthRequest="300"></Image> 
		</StackLayout>
	</StackLayout>
</local:AttachmentPageBase>
