@using common = IID.BusinessLayer.Globalization.Common.Resource;
@using IID.WebSite.Helpers;
@using IID.WebSite.Models;
@using IID.BusinessLayer.Identity;

@model Activity

@{
    ViewBag.Title = ("View Activity: " + Model.Name);
}

@section contentHeader{
    @Html.Partial("~/Views/Shared/ProjectBreadcrumbs.cshtml", ProjectBreadcrumbs.ForActivity(Model.ActivityId.Value))
}

@Scripts.Render("~/Scripts/activity.js")


<section class="max-width-max">
    <div class="header">
        <div class="float-left title">
            @common.Activity
        </div>
        <div class="float-right button">
            <a class="btn btn-primary" href="@Url.Action("DataExport", new { id = Model.ActivityId.Value })">
                @common.Export
                <img src="~/Images/icons/16/arrow_down.png" />
            </a>
            <a class="btn btn-primary" href="@Url.Action("DataExportResearch", new { id = Model.ActivityId.Value })">
                @common.ExportForResearch
                <img src="~/Images/icons/16/arrow_down.png" />
            </a>
           @if ((Identity.CurrentUser.IsInRole(Role.ActivityLeader))
               || (Identity.CurrentUser.IsInRole(Role.CountryDirector))
               || (Identity.CurrentUser.IsInRole(Role.SystemAdministrator)))
               {
                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.ActivityId.Value })">
                    @common.Edit
                    <img src="~/Images/icons/16/pencil_edit.png" />
                </a>
               }         
            <button type="button"
                    onclick="modifyActivityFavorite(@Model.ActivityId, this, $('img', this)[0]);"
                    title="@(Model.IsFavorite ? common.RemoveFavorite : common.AddFavorite)"
                    value="@Model.IsFavorite.ToString().ToLower()">
                @common.Favorite
                <img src="~/Images/icons/16/star_@(Model.IsFavorite ? "color" : "gray").png" />
            </button>
        </div>
        <div class="clear-floats"></div>
    </div>
    <div class="content">
        <table class="form-table">
            <colgroup>
                <col style="width:  30%;" />
                <col style="width: 50px;" />
                <col style="width:  70%;" />
            </colgroup>
            <tbody>
                <tr>
                    <td>
                        <table class="width-100p">
                            <colgroup>
                                <col />
                                <col style="width: 100%;" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.ProjectId)</td>
                                    <td>@Html.DisplayFor(m => m.Project.Name)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.Name)</td>
                                    <td>@Html.DisplayFor(m => m.Name)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.CountryId)</td>
                                    <td>@Html.DisplayFor(m => m.Country.Name)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.FunderValue)</td>
                                    <td>@Html.DisplayFor(m => m.FunderValue)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.StartDate)</td>
                                    <td>@Html.DisplayFor(m => m.StartDate)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.EndDate)</td>
                                    <td>@Html.DisplayFor(m => m.EndDate)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.Active)</td>
                                    <td>@Html.DisplayFor(m => m.Active)</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td></td>
                    <td>
                        <table class="width-100p">
                            <colgroup>
                                <col />
                                <col style="width: 100%;" />
                            </colgroup>
                            <tbody>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.PrimaryManagerName)</td>
                                    <td>@Html.DisplayFor(m => m.PrimaryManagerName)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.AdditionalManagerNames)</td>
                                    <td>@Html.Raw(String.Join(",<br />", Model.AdditionalManagerNames))</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.TechnicalAreaValue)</td>
                                    <td>@Html.DisplayFor(m => m.TechnicalAreaValue)</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.TechnicalAreaSubtypeValues)</td>
                                    <td>@Html.Raw(String.Join(",<br />", Model.TechnicalAreaSubtypeValues))</td>
                                </tr>
                                <tr>
                                    <td>@Html.LabelForForm(m => m.OtherKeyInformation)</td>
                                    <td>@Html.DisplayFor(m => m.OtherKeyInformation, "ContainFormField")</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

@Html.Partial("~/Views/Aim/List.cshtml", new AimCollection(Model.ActivityId.Value, Model.Aims))

@Html.Partial("~/Views/ActivitySite/List.cshtml", new ActivitySiteCollection(Model.ActivityId.Value, null))

@Html.Partial("~/Views/Note/Index.cshtml", new ListNotesViewModel(null, Model.ActivityId, Model.Notes))