@using IID.BusinessLayer.Helpers
@using IID.WebSite.Helpers
@using IID.WebSite.Models
@using common = IID.BusinessLayer.Globalization.Common.Resource
@using login = IID.BusinessLayer.Globalization.Login.Resource

@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div>
    <p>@common.CopyrightText2</p>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "error list-style-type-none" })

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, FormMethod.Post }))
    {
        @Html.AntiForgeryToken()
        <table class="form-table">
            <tbody>
                <tr>
                    <td>@Html.LabelForForm(m => m.EmailAddress)</td>
                    <td>@Html.TextBoxFor(m => m.EmailAddress, new { @class = "width-400" })</td>
                    <td>@Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "error" })</td>
                </tr>
                <tr>
                    <td>@Html.LabelForForm(m => m.Password)</td>
                    <td>@Html.PasswordFor(m => m.Password, new { @class = "width-400" })</td>
                    <td>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })</td>
                </tr>
                <tr>
                    <td></td>
                    <td class="text-align-right">
                        <button type="submit">
                            @login.Login
                        </button>
                        @Html.ActionLink(login.ForgotPassword, "ForgotPassword", null, new { @class = "btn btn-primary" })
                    </td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}