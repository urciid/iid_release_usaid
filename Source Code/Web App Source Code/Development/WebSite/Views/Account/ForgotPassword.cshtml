@using IID.WebSite.Helpers
@using login = IID.BusinessLayer.Globalization.Login.Resource

@model IID.WebSite.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = login.ForgotPassword;
}

<div>
    <h4>@login.ForgotPassword</h4>
    <p>@login.ForgotPasswordInstructions</p>
    <hr />

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <table class="form-table">
            <tbody>
                <tr>
                    <td>@Html.LabelForForm(m => m.EmailAddress)</td>
                    <td>@Html.TextBoxFor(m => m.EmailAddress, new { @class = "width-400" })</td>
                    <td>@Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "error" })</td>
                </tr>
                <tr>
                    <td class="text-align-center" colspan="2"><input type="submit" value="@login.SendEmail" /></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}